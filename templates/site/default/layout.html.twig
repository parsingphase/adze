<!DOCTYPE html>
<html lang="en">
<head><title>{% block title %}{% block pageTitle %}Default Adze site active{% endblock %}{% endblock %}</title>
    {% block headerLinks %}
        <!--suppress HtmlUnknownTarget -->
        <link type="text/css" media="all" rel="stylesheet"
              href="/resources/components/bootstrap/css/bootstrap.min.css"/>
        <!--suppress HtmlUnknownTarget -->
        <link type="text/css" media="all" rel="stylesheet"
              href="/resources/parsingphase/adze/adze.css"/>
    {% endblock %}
</head>
<body>
{% block body %}
    <div class="container adze-page-container">
        {% block container %}
            <div class="col-sm-9 adze-main-column">
                {% block content %}
                    {% block contentTop %}
                    {% endblock %}
                    {% block contentMiddle %}
                    {% endblock %}
                    {% block contentBottom %}
                    {% endblock %}
                {% endblock %}
            </div>

            <div class="col-sm-3 adze-sidebar">
                {% block sidebar %}
                    {% block sidebarTop %}
                        {% block loginBox %}
                            <div class="well well-sm text-center">
                                {% if app.user %}
                                    <p>Logged in
                                        as {{ app.user.name }} {% if is_granted('ROLE_ADMIN') %}(ADMIN){% endif %}</p>
                                    <p><a href="{{ path('user.logout') }}">Logout</a></p>
                                {% else %}
                                    <p>Anonymous user</p>
                                    <p><a href="{{ path('user.login') }}">Login</a></p>
                                {% endif %}
                            </div>
                        {% endblock %}
                    {% endblock %}
                    {% block sidebarMiddle %}
                    {% endblock %}
                    {% block sidebarBottom %}
                    {% endblock %}
                {% endblock %}
            </div>
        {% endblock %}
    </div>
{% endblock %}
</body>
</html>
