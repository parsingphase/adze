{
    "name": "parsingphase/adze",
    "description": "Silex-based web framework",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Richard George",
            "email": "richard@phase.org"
        }
    ],
    "autoload": {
        "psr-0": {
            "Phase\\Adze\\": "src/"
        }
    },
    "minimum-stability": "stable",
    "require": {
        "php": "~5.5",
        "silex/silex": "~1.2",
        "components/bootstrap": "~3.2",
        "components/jqueryui": "~1.11",
        "components/handlebars.js": "~2.0",
        "twig/twig": "~1.16",
        "doctrine/dbal": "~2.4",
        "symfony/twig-bridge": "~2.5",
        "symfony/form": "~2.5",
        "symfony/security": "~2.5",
        "symfony/validator": "~2.5",
        "symfony/config": "~2.5",
        "symfony/translation": "~2.5",
        "monolog/monolog": "~1.10",
        "ext-intl": "*",
        "jasongrimes/silex-simpleuser": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.2",
        "theseer/phpdox": "~0.6",
        "phploc/phploc": "~2.0",
        "squizlabs/php_codesniffer": "~1.5",
        "ext-pdo_sqlite": "*",
        "leafo/lessphp": "~0.4"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        }
    }
}
